{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "mocha", "chai", "node"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "sourceRoot": "lib",
    "outDir": "dist"
  },
  "include": [
    "lib/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "examples"
  ]
}