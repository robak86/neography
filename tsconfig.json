{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "mocha", "chai", "node"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "strictNullChecks": true
  },
  "include": [
    "lib/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "dist"
  ]
}